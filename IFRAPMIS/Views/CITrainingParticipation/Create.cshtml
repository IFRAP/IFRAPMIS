                    $("#CICIGId").empty();
                    $("#CICIGId").append('<option>Select...</option>');                   
                    $.each(data, function (index, row) {
                        console.log(row);
                        $("#CICIGId").append("<option value='" + row.value + "'>" + row.text + "</option>")
                    });
                });
                return false;
            });
    });

</script>
