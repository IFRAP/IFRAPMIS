@model DAL.Models.Domain.Damage.DamageIP
@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService
@* @using Constant.Constants *@

@{
    ViewData["Title"] = "Create";
    ViewBag.pageTitle = "BLEP";
    ViewBag.Title = @ViewBag.Heading;
    ViewBag.pTitle = @ViewBag.Heading;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (true)
{
    <div class="checkout-tabs">
        <div class="row">
            <div class="col-lg-2">
                <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
                    <a class="nav-link" asp-action="Index" asp-route-id="@Model.DamageIPId" asp-controller="DamageIP" aria-selected="true">
                        <i class="bx bxs-grid-alt check-nav-icon mt-4 mb-2"></i>
                        <p class="font-weight-bold mb-4">List of @ViewBag.Heading</p>
                    </a>
                    <a class="nav-link active" id="v-pills-privacy-tab" data-toggle="pill" href="#v-pills-privacy" role="tab" aria-controls="v-pills-privacy" aria-selected="false">
                        <i class="bx bx-list-plus d-block check-nav-icon mt-4 mb-2"></i>
                        <p class="font-weight-bold mb-4">Add New @ViewBag.Heading</p>
                    </a>
                   @* <a class="nav-link" id="v-pills-support-tab" data-toggle="pill" href="#v-pills-support" role="tab" aria-controls="v-pills-support" aria-selected="false">
                        <i class="bx bx-support d-block check-nav-icon mt-4 mb-2"></i>
                        <p class="font-weight-bold mb-4">Support</p>
                    </a>*@
                </div>
            </div>
            <div class="col-lg-10">
                <div class="card">
                    <div class="card-body">
                        <div class="tab-content" id="v-pills-tabContent">
                            <div class="tab-pane fade show active" id="v-pills-privacy" role="tabpanel" aria-labelledby="v-pills-privacy-tab">
                                <div class="alert alert-info" style="padding: .40rem 1.25rem" role="alert">
                                    <div class="row">
                                        <div class="col-sm-6">
                                            <h4 class="mt-2 card-title">Add New @ViewBag.Heading</h4>
                                        </div>                                      
                                    </div>
                                </div>
                                <form asp-action="Create" autocomplete="off" enctype="multipart/form-data">
                                    <div class="row">
                                        <div class="col-md-3">
                                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                            <input type="hidden" asp-for="DamageIPId">
                                            <input type="hidden" asp-for="Attachment">
                                            <div class="form-group">
                                                <label class="control-label">Damage Assessment HTS</label>
                                                <select required id="DamageAssessmentHTS" name="DamageAssessmentHTS" asp-items="ViewBag.DamageAssessmentHTS" class="form-control">
                                                    <option value=""> - - Select - -</option>
                                                </select>
                                            </div>                    
                                        </div>
                                        <div class="col-md-3">                                            
                                           <div class="form-group">
                                                <label class="control-label">Damage Assessment Livestock</label>
                                                <select required id="DamageAssessmentLivestock" name="DamageAssessmentLivestock" asp-items="ViewBag.DamageAssessmentLivestock" class="form-control">
                                                    <option value=""> - - Select - -</option>
                                                    
                                                </select>
                                            </div>                   
                                        </div>
                                        
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label asp-for="DamageType" class="control-label"></label>
                                                <input asp-for="DamageType" class="form-control" placeholder="Damage Type" required />
                                                <span asp-validation-for="DamageType" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label asp-for="Percentage" class="control-label"></label>
                                                <input asp-for="Percentage" type="number" class="form-control" />
                                                <span asp-validation-for="Percentage" class="text-danger"></span>
                                            </div>
                                        </div>
                                       
                                         <div class="col-md-4">
                                           <div class="form-group">
                                                <label asp-for="Attachment" class="control-label"></label>
                                                <input type="file" name="Attachment" class="form-control" required accept="application/pdf" />
                                                <span asp-validation-for="Attachment" class="text-danger"></span>
                                            </div>
                                        </div>
                                         
                                              <div class="form-group">
                                                <input type="submit" value="Add Damage Assessment" class="btn btn-primary" />
                                            </div>
                                        </div>
                                </form>
                            </div>
                                
                            </div>
                        </div>
                   </div>
               </div>
           </div>
       </div>
                          
}
else
{
    <div class="account-pages my-5 pt-5">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="text-center mb-5">
                        <h1 class="display-2 font-weight-medium">4<i class="bx bx-buoy bx-spin text-primary display-3"></i>4</h1>
                        <h4 class="text-uppercase">Sorry, page not found</h4>
                        @*<div class="mt-5 text-center">
                                <a class="btn btn-primary waves-effect waves-light" href=@Url.Action("Index", "index")>Back to Dashboard</a>
                            </div>*@
                    </div>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-8 col-xl-6">
                    <div>
                        <img src="~/assets/images/error-img.png" alt="" class="img-fluid">
                    </div>
                </div>
            </div>
        </div>
    </div>
}


@section scripts{
    <script src="~/assets/libs/parsleyjs/parsley.min.js"></script>
    <script src="~/assets/libs/bootstrap-datepicker/js/bootstrap-datepicker.min.js"></script>
    <!-- form mask -->
    <script src="~/assets/libs/inputmask/min/jquery.inputmask.bundle.min.js"></script>
    <!-- form mask init -->
    <script src="~/assets/js/pages/form-mask.init.js"></script>
    <script src="~/assets/js/pages/form-validation.init.js"></script>
    <!-- bs custom file input plugin -->
    <script src="~/assets/libs/bs-custom-file-input/bs-custom-file-input.min.js"></script>
    <script src="~/assets/js/pages/form-element.init.js"></script>
    <script>
        $(document).ready(function () {
            $("#DamageAssessmentHTS").change(function () {
                $("#DamageAssessmentHTS").empty();
                $.get("/DamageIP/GetAllDamageAssessmentHTSId", { DamageIPId: $("#DamageAssessmentHTS").val() })
                    .done(function (data) {
                        console.log(data);
                        $.each(data, function (index, row) {
                            console.log(row);
                            $("#DamageAssessmentHTS").append("<option value='" + row.value + "'>" + row.text + "</option>");
                        });
                    })
                    .fail(function (xhr, status, error) {
                        console.error("Error fetching data: ", error);
                    });
                return false;
            });
            $("#DamageAssessmentLivestock").change(function () {
                $("#DamageAssessmentLivestock").empty();
                $.get("/DamageIP/DamageAssessmentLivestockId", { DamageIPId: $("#DamageAssessmentLivestock").val() })
                    .done(function (data) {
                        console.log(data);
                        $.each(data, function (index, row) {
                            console.log(row);
                            $("#DamageAssessmentLivestock").append("<option value='" + row.value + "'>" + row.text + "</option>");
                        });
                    })
                    .fail(function (xhr, status, error) {
                        console.error("Error fetching data: ", error);
                    });
                return false; 
            });

        });
        
    </script>
}